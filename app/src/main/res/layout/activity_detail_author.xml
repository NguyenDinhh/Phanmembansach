<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Detail_Author">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_back2"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/j_r_r_tolkien" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="20dp"
                        android:paddingTop="10dp"
                        android:text="J. R. R. Tolkien"
                        android:textAlignment="center"
                        android:textSize="22sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tvjob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:text="Writer, Philologist"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="Number of books: 5" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="J. R. R. Tolkien was an English author and scholar, famous for his fantasy masterpieces &quot;The Hobbit&quot; and &quot;The Lord of the Rings&quot; trilogy. He created the vast, detailed world of Middle-earth, filled with unique cultures, languages, and histories. Tolkien's work revolutionized modern fantasy literature, influencing countless authors and adaptations. His storytelling, blending mythology and adventure, remains beloved by readers worldwide, making him one of the most iconic figures in literary history."
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="Books"
                android:textColor="#4B87F1"
                android:textSize="22sp"
                android:textStyle="bold"></TextView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="420dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/book1"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="232dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/chuanhan1" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingTop="10dp"
                            android:text="Chúa nhẫn 1"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="Begin with eight Sisters who have a really deep bonding to one another after their parents died..."
                            android:textColor="#625F5F" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="$15.00" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/book2"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="232dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/chuanhan2" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingTop="10dp"
                            android:text="Chúa nhẫn 2"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="“. . . a feat of imagination and faith.” —Philip Yancey, award-winning author. ...."
                            android:textColor="#625F5F" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="$18.90" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/book3"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="232dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/chuanhan33" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingTop="10dp"
                            android:text="Chúa nhẫn 3"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="Begin with eight Sisters who have a really deep bonding to one another after their parents died..."
                            android:textColor="#625F5F" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="$21.08" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/book4"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="232dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/hobbit" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingTop="10dp"
                            android:text="Người Hobbit"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="“. . . a feat of imagination and faith.” —Philip Yancey, award-winning author. ..."
                            android:textColor="#625F5F" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="$25.00" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/book5"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="232dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/hobbit2" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingTop="10dp"
                            android:text="Nguời Hobbit 2: Nội chiến"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="Begin with eight Sisters who have a really deep bonding to one another after their parents died..."
                            android:textColor="#625F5F" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="$23.10" />
                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>