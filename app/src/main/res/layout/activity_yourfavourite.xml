<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back_button"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Your Favourite"
            android:textColor="#4371E8"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/background_books"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/book_image_1"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:src="@drawable/chuanhan1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/book_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chua nhan 1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/book_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$28.35"
                        android:textSize="16sp"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/remove_button_1"
                    android:layout_marginBottom="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Remove book"
                    android:src="@drawable/ic_close" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/background_books"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/book_image_2"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:src="@drawable/chuanhan2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/book_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chua nhan 2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/book_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$29.55"
                        android:textSize="16sp"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/remove_button_2"
                    android:layout_marginBottom="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Remove book"
                    android:src="@drawable/ic_close" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
