<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_back2"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chuanhan1" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:text="Chúa nhẫn 1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvauthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="J. R. R. Tolkien"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="$15.00"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvoldprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="$15.00"
                        android:textColor="#BFBCBC" />

                    <TextView
                        android:id="@+id/tvsale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:text="- 20%"
                        android:textColor="@color/white"
                        android:background="@drawable/background_sale" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvsold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Đã bán: 12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_favourite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/ic_favorite" />

                    <ImageView
                        android:id="@+id/ic_cart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/ic_shopping" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="The Book of God by Walter Wangerin is a novelized retelling of the Bible, bringing its stories and characters to life in a vivid, engaging way. Wangerin weaves together key biblical events, from creation to the life of Jesus, offering a fresh perspective on familiar narratives. His storytelling blends historical context with rich emotional depth, making the Bible more accessible and immersive for readers. It’s an inspiring read for those seeking a deeper connection to the scriptures."
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Reviews"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#FF9900" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.0"
                android:isIndicator="true"
                android:layout_marginLeft="16dp"
                android:stepSize="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52 Reviews"
                android:textSize="16sp"
                android:textColor="#666"
                android:layout_marginLeft="16dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/avt_nhung"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Avatar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lưu Hồng Nhung"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good book."
                        android:textSize="13sp" />
                </LinearLayout>

                <RatingBar
                    android:layout_width="194dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="-40dp"
                    android:layout_marginEnd="5dp"
                    android:numStars="4"
                    android:rating="5."
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    android:stepSize="0.5" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/avt_dinh"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Avatar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Văn Thế Dinh"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finally i can buy this book."
                        android:textSize="14sp" />
                </LinearLayout>


                <RatingBar
                    android:layout_width="194dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="-40dp"
                    android:layout_marginEnd="5dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5."
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    android:stepSize="0.5" />





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/avt_anh"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Avatar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lê Đức Tuấn Anh"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My gf broke up with me."
                        android:textSize="14sp" />
                </LinearLayout>

                <RatingBar
                    android:layout_width="194dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="-40dp"
                    android:layout_marginEnd="5dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="2."
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    android:stepSize="0.5" />



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
