<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".CheckoutActivity">

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="701dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/dau_x" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:text="Check out"
            android:textColorHint="4371E8"
            android:textSize="35dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/apm_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#D7D7D7"
            android:hint="Add Payment Method"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Payment method"
            android:textColorHint="4371E8"
            android:textSize="35dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#D7D7D7"
            android:text="*****"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:drawableLeft="@drawable/mb" <!-- Chèn hình ảnh vào bên trái -->/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#D7D7D7"
            android:text="*****"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:drawableLeft="@drawable/momo"/>

        <EditText
            android:id="@+id/cod_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#D7D7D7"
            android:text="Cash on delivery"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:drawableLeft="@drawable/cash"/>

        <EditText
            android:id="@+id/total_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#D7D7D7"
            android:text="Total Payable"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/order_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#4371E8"
            android:text="Order now"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>